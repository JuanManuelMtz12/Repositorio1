<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroUsuarios">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:text="Registro Usuarios">

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Registro"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="40dp" />

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="Nombre"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/idNombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/idusuario"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="ApellidoPaterno"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/idApellidoPaterno"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/idusuario"/>


        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="ApellidoMaterno"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/idApelldioMaterno"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/idusuario"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="Correo"
            android:textSize="20dp"
            />


        <EditText
            android:id="@+id/idEmail"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/idcorreo"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="Telefono"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/idPhone"
            android:ems="10"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/idtelefono"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="Usuario"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/idUsuario"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/idusuario"/>


        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="ContraseÃ±a"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/idPassword"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/idcontrase"/>


        <Button
            android:id="@+id/idLogin"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:text="Registrar"
            app:cornerRadius="20dp" />


        <Button

            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:id="@+id/idCancelar"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Cancelar"
            app:cornerRadius="20dp" />



    </LinearLayout>

</ScrollView>